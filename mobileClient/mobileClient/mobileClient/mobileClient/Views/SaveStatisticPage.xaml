<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobileClient.Views.SaveStatisticPage">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" FontSize="Body" Margin="0,20,0,0" Text="Калории с приемом пищи за сегодня"/>
            <Entry HorizontalTextAlignment="Center" Text="{Binding EatenCalories}"></Entry>
            <Label HorizontalTextAlignment="Center" FontSize="Body" Margin="0,20,0,0" Text="Калории соженные на тренировке за сегодня"/>
            <Entry HorizontalTextAlignment="Center" Text="{Binding BurntCalories}"></Entry>
            <Label HorizontalTextAlignment="Center" FontSize="Body" Margin="0,20,0,0" Text="Ваш вес сегодня"/>
            <Entry HorizontalTextAlignment="Center" Text="{Binding CurrentWeight}"></Entry>
            <Button Margin="0,10" Text="Сохранить в статистику" Command="{Binding SaveStatisticCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>