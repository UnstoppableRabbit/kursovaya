<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobileClient.Views.LoginPage"
             BackgroundColor="{StaticResource Accent}"
             Title="Вход">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label FontSize="Title" Text="Войти в аккаунт"/>
            <Label FontSize="Body" Margin="0,50,0,0" Text="Email"/>
            <Entry Keyboard="Email" Text="{Binding Email}"></Entry>
            <Label FontSize="Body" Margin="0,50,0,0" Text="Пароль"/>
            <Entry IsPassword="True" Text="{Binding Password}"></Entry>
            <Button Text="Войти" Command="{Binding LoginCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>